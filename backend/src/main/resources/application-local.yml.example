# ==========================================
# 本地敏感配置模板
# 使用方法：复制为 application-local.yml 后填入真实值
# cp application-local.yml.example application-local.yml
# ==========================================

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/agent_aigc?useUnicode=true&characterEncoding=utf8&serverTimezone=GMT%2B8&useSSL=false&allowPublicKeyRetrieval=true
    username: root
    password: your_mysql_password
  data:
    redis:
      host: localhost
      port: 6379
      password:

# ==========================================
# AIGC 配置
# ==========================================
aigc:
  providers:
    # Google GenAI - 图片/视频/TTS 共用一个 Key
    # 获取方式：https://aistudio.google.com/apikey
    google:
      enabled: true
      api-key: your_google_api_key
      base-url: https://generativelanguage.googleapis.com
      # 如需代理访问 Google API，取消下面两行注释
      # proxy-host: 127.0.0.1
      # proxy-port: 7897

    # OneRouter - Agent 意图分析（gpt-4o-mini）
    # 获取方式：https://onerouter.pro
    onerouter:
      enabled: true
      api-key: your_onerouter_api_key
      api-url: https://llm.onerouter.pro/v1
      model: gpt-4o-mini
      timeout: 30000
      temperature: 0.1

  # 图片生成
  image:
    active-provider: google
    google:
      enabled: true
      model: gemini-2.5-flash-image
      timeout: 60000
      default-aspect-ratio: "16:9"
      default-image-size: "1K"
      enable-thinking: true

  # 视频生成
  video:
    active-provider: google
    google:
      enabled: true
      model: veo-3.1-fast-generate-preview
      timeout: 360000
      default-aspect-ratio: "16:9"
      default-resolution: "720p"
      default-duration: 8
      generate-audio: true

  # 音频 TTS
  audio:
    active-provider: google
    google:
      enabled: true
      model: gemini-2.5-flash-preview-tts
      timeout: 60000
      default-voice: Kore
      default-bpm: 90
      default-temperature: 1.0

# ==========================================
# 存储
# ==========================================
storage:
  local:
    enabled: true
    base-path: ./uploads
    url-prefix: http://localhost:10003/files
